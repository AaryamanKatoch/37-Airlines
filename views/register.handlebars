<h2>Register</h2>
<nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid well get-center" id="home" style="display:block; padding-top:10px;padding-bottom:10px">
            
        <ul class="navbar-nav">
    <li class="nav-item" style="float:right;display:block;padding-left:10px;padding-right:10px;">
    <a  class="nav-link" href="/"> Homepage</a></li>
    </ul>
        </div>
        </nav>
<form action="/register" method="post" id="registration-form">

    <table>
        <tr>
            <td><label for="firstName" class="form-label">Firstname: </label></td>
            <td><input type="text" class="form-control" name="firstName" placeholder="Enter firstname" id = "firstName"></td>
        </tr>

        <tr>
            <td><label for="lastName" class="form-label">Lastname: </label></td>
            <td><input type="text" class="form-control" name="lastName" placeholder="Enter lastname" id = "lastName"></td>
        </tr>

        <tr>
            <td><label for="email" class="form-label">Email: </label></td>
            <td><input type="email" class="form-control" name="email" placeholder="Enter email" id = "email"></td>
        </tr>

        <tr>
            <td><label for="password" class="form-label">Password: </label></td>
            <td><input type="password" class="form-control" name="password" placeholder="Enter password" id = "password"></td>
        </tr>

        <tr>
            <td><label for="confirmPassword" class="form-label">Confirm Password: </label></td>
            <td><input type="password" class="form-control" name="confirmPassword" placeholder="Confirm password" id = "confirmPassword"></td>
        </tr>

        <tr>
            <td><button type="submit" class="btn">Register</button></td>
        </tr>
    </table>
    {{#if hasErrors}}
        <p id="error">{{error}}</p>
    {{/if}}
</form>

<div class="hidden" id="error-container">
  <div class="text-goes-here">
  </div>
    <script src="/public/js/login.js"></script>
</div>


<a href="/login">Already have an account? Click here to log-in</a>