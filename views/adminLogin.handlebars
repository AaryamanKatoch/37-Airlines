<section>
  <h1>Admin Login</h1>
    <form action="/adminlogin" method="post" id="login-form">
    <table>
      <tr>
        <td><label for="email" class="form-label">Enter email: </label></td>
        <td><input type="email" name="email" class="form-control" placeholder="Enter email" id = "email"></td>
      </tr>

      <tr>
        <td><label for="password" class="form-label">Enter password: </label></td>
        <td><input type="password" name="password" class="form-control" placeholder="Enter password" id = "password"></td>
      </tr>

      <tr>
        <td><button type="submit" class="btn">Login</button></td>
      </tr>
    </table>
         
      {{#if hasErrors}}
          <p>{{error}}</p>
      {{/if}}
  </form> 
  <br>
</section>