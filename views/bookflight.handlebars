{{#if isLoggedIn}}
<div><a href="/userProfile">User Profile</a></div>
<div><a href="/logout">Logout</a></div>
{{else}}
<a href="/login">Login</a>
{{/if}}

<form action="/searchflights/flightdetails/{{flightId}}/book/success" method="POST" name = "formName" id="formName">
{{#for noOfPass choice}}
    <div>
        <label for="firstname{{this.noOfForms}}" class="form-label">Firstname</label>
        <input type="text" class="form-control" name="firstname{{this.noOfForms}}" placeholder="Enter Firstname" id = "firstname{{this.noOfForms}}">
    </div>
    <div>
        <label for="lastname{{this.noOfForms}}" class="form-label">Lastname</label>
        <input type="text" class="form-control" name="lastname{{this.noOfForms}}" placeholder="Enter Lastname" id = "lastname{{this.noOfForms}}">
    </div>
    <div>
        <label for="passport{{this.noOfForms}}" class="form-label">Passport</label>
        <input type="text" class="form-control" name="passport{{this.noOfForms}}" placeholder="Enter Passport Number" id = "passport{{this.noOfForms}}">
    </div>
    <div>
        <label for="birthdate{{this.noOfForms}}" class="form-label">Birthdate</label>
        <input type="date" class="form-control" name="birthdate{{this.noOfForms}}" id = "birthdate{{this.noOfForms}}">
    </div>
    <div>
        <label for="male{{this.noOfForms}}" class="form-label">Male</label>
        <input type="radio" class="form-control" name="gender{{this.noOfForms}}" value="male" id="male{{this.noOfForms}}">
        <label for="female{{this.noOfForms}}" class=class="form-label">Female</label>
        <input type="radio" class="form-control" name="gender{{this.noOfForms}}" value="female" id="female{{this.noOfForms}}">
    </div>
    <div>
        <label for="email{{this.noOfForms}} class="form-label"">Enter your email:</label>
        <input type="email{{this.noOfForms}}" class="form-control" id="email{{this.noOfForms}}" name="email{{this.noOfForms}}">
    </div>
    <div>
        <label for="mobile{{this.noOfForms}} class="form-label"">Enter Mobile Number:</label>
        <input type="tel" id="mobile{{this.noOfForms}}" class="form-control" name="mobile{{this.noOfForms}}" placeholder="Enter mobile number">  
    </div>
    <div>
        <label for="foodchoices{{this.noOfForms}} class="form-label"">Food Preference</label>
        <select name="foodchoices{{this.noOfForms}}" id="foodchoices{{this.noOfForms}}">
           {{#each this.foodItems}}
            <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
    </div>
    <br>
    <br>           
{{/for}}
<button type="submit" id="sub">Book</button>    
</form>
<div class="hidden" id="error-container">
  <div class="text-goes-here">
  </div>
  <script>
   
    sessionStorage.setItem('noOfPass',{{noOfPass}});
    </script>
  <script src="/public/js/bookflight.js"></script>