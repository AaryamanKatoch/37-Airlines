<main>
    <div style="text-align: right;">
        {{#if isLoggedIn}}
        {{!-- <div><a href="/userProfile">User Profile</a></div> --}}
        <div><a href="/adminlogout">Logout</a></div>
        {{else}}
        <a href="/adminlogin">Login</a>
        {{/if}}
        
        {{#if haserror}}
        <div>Error : {{error}}</div>
        {{/if}}
    </div>

<h2>All Available Flights</h2>


    <table class ="table table-striped">
        <thead>
            <tr>
                <th>Flight Code</th>
                <th>Arrival</th>
                <th>Departure</th>
                <th colspan="2">Action</th>
            </tr>
        </thead>

        <tbody>
            {{#each solution1}}

            <tr>
                <td>{{flightCode}}</td>
                <td>{{arrival}}</td>
                <td>{{departure}}</td>
                <td><a href="/admin/editflight/{{_id}}">Update</a></td>
                <td><a href="/admin/deleteflight/{{_id}}">Delete</a></td>
            </tr>

            {{/each}}
        </tbody>
    </table>

